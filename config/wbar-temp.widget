scanner {
  file("/sys/class/hwmon/hwmon1/temp1_input") {
    CPUTemp = Grab()
  }
}

module("bsdctl")

Set XCpuTemp = If(!Ident(BSDCtl),CPUTemp,Val(BSDCtl("dev.cpu.0.temperature")))

layout {
  label {
    style = "temperature"
    interval = 10000
    value = Str(XCPUTemp/1000)+'°C '+Lookup(XCpuTemp/1000,40,"",20,"","")
  }
}
